<h1>Add a new painting</h1>
<%= form_for @painting do |f| %>
  <fieldset>
    <legend>Painting</legend>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :artist %>
      <!-- <#%= f.text_field :artist_id %> -->
      <%= collection_select(:painting, :artist_id, @artists, :id, :name) %>
      <!-- <#%= select_tag "artist_id", options_from_collection_for_select(@artists, "id", "name") %> -->
    </div>
    <div>
      <%= f.label :museum %>
      <%= collection_select(:painting, :museum_id, @museums, :id, :name) %>
      <!-- <#%= select_tag "museum_id", options_from_collection_for_select(@museums, "id", "name") %> -->
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div>
      <%= f.label :image %>
      <%= f.text_field :image %>
    </div>
  </fieldset>
  <%= f.submit %>
<% end %>