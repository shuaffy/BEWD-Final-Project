<% if @shirt.errors.any? %>
  <h1>Errors:</h1>
  <ul>
  <% @shirt.errors.full_messages.each do |mesg|%>
	<li><%= mesg %></li>
<%end%>
</ul>
<%end%>


<%= form_for @shirt do |f| %>
<fieldset>
<div class ='fields'>
	<%= f.label :description %>
	<%= f.text_field :description %>
</div>

<div class = 'fields'>
	<%= f.label :name %>
 	<%= f.text_field :name %>
</div>

<div class = 'fields'>
 	<%= f.label :image %>
	<%= f.text_field :image, placeholder: 'placehold this' %>
</div>

<%= f.submit %>
</fieldset>
<%end%>